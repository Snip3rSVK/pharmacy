<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane fx:controller="Controller.LoginController" fx:id="login" xmlns:fx="http://javafx.com/fxml">
    <children>
        <GridPane alignment="center">
            <VBox>
                <Label text="Email:" />
                <TextField fx:id="email" text="example@gmail.com" />

                <Label text="Heslo:" />
                <PasswordField fx:id="password" text="1234" />

                <Button text="Prihlásiť sa" onAction="#login"/>

                <Text fx:id="errorMessage"></Text>

            </VBox>
        </GridPane>
    </children>
</StackPane>